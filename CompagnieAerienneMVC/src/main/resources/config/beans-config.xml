	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="salarieDao" class="companie.aerienne.mvc.dao.impl.SalarieDaoImpl"/>
       <bean id="salarieService" class="companie.aerienne.mvc.services.impl.SalarieServiceImpl">
        <property name="dao" ref="salarieDao" />
    </bean>
    <bean id="piloteDao" class="companie.aerienne.mvc.dao.impl.PiloteDaoImpl"/>
       <bean id="piloteService" class="companie.aerienne.mvc.services.impl.PiloteServiceImpl">
        <property name="dao" ref="piloteDao" />
    </bean>

</beans>